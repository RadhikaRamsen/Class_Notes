text_file = spark.sparkContext.textFile("file:///home/ubuntu/sample.txt")

counts = (
    text_file.flatMap(lambda line: line.split(" "))
    .map(lambda word: (word, 1))
    .reduceByKey(lambda a, b: a + b)
)

